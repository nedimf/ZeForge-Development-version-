<div class="container">
  <div class="row">
    <div class="col-md-10 offset-md-1 col-lg-8 offset-lg-2 text-xs-center">
      <h1><%= @skill.name %></h1>
      <p>Category: <%= @skill.category.name   %></p>
      <%= link_to 'Add as my skill', myskills_path(myskill: {skill_id: @skill.id, score: 0}), method: :post, class: 'btn btn-primary btn-sm' %>
    </div>
    <div class="col-lg-2">
    </div>
  </div>

  <div class="row">
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Users having this skill</th>
        </tr>
      </thead>
      <tbody>
        <% @skill.users.each do |user| %>
        <tr>
          <td><%= link_to user.name, profile_path(user.id), class: 'btn btn-sm btn-warning' %></td>
        </tr>
        <% end%>
      </tbody>
    </table>
  </div>
</div>
<script>
$('#star-rating').raty({
  path: '/assets',
  scoreName: 'myskill[score]'
});
</script>
