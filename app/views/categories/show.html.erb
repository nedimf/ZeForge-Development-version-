<div class="container">
  <div class="row">
    <div class="col-md-10 offset-md-1 col-lg-8 offset-lg-2 text-xs-center">
      <h1><%= @category.name %></h1>
    </div>
  </div>

  <div class="row">
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Category has these skills</th>
        </tr>
      </thead>
      <tbody>
        <% @category.skills.each do |skill| %>
        <tr>
          <td><%= link_to skill.name, skill_path(skill.id) %></td>
        </tr>
        <% end%>
      </tbody>
    </table>
  </div>
</div>
